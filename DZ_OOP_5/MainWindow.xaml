        <Label x:Name="InputTimeLb" Content="Уcтановить время:" HorizontalAlignment="Left" Height="25" Margin="61,164,0,0" VerticalAlignment="Top" Width="127"/>
        <RadioButton x:Name="IncreaseRB" Content="Увеличить" HorizontalAlignment="Left" Margin="193,237,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="DecreaseRB" Content="Уменьшить" HorizontalAlignment="Left" Margin="303,237,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ConfirmChangeBtn" Content="Подтвердить изменение" HorizontalAlignment="Left" Margin="415,201,0,0" VerticalAlignment="Top" Width="144" Height="18" Click="ConfirmChangeBtn_Click"/>
        <Label x:Name="TimeLb" Content="" HorizontalAlignment="Left" Margin="193,61,0,0" VerticalAlignment="Top" FontSize="45" Width="195"/>
