        <TextBox x:Name="InputHourTB" HorizontalAlignment="Left" Height="18" Margin="193,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" RenderTransformOrigin="0.524,-0.191" Text="0"/>
        <TextBox x:Name="InputMinuteTB" HorizontalAlignment="Left" Height="18" Margin="258,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" Text="0"/>
        <TextBox x:Name="InputSecondTB" HorizontalAlignment="Left" Height="18" Margin="330,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" Text="0"/>
