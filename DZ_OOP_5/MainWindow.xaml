        <Button x:Name="ConfirmInputBtn" Content="Подтвердить время" HorizontalAlignment="Left" Margin="415,171,0,0" VerticalAlignment="Top" Width="144" Height="18" Click="ConfirmInputBtn_Click"/>
        <Label Content="Часы" HorizontalAlignment="Left" Height="77" Margin="61,56,0,0" VerticalAlignment="Top" Width="112" FontSize="45"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="0" Margin="238,114,0,0" VerticalAlignment="Top" Width="14"/>
        <Label x:Name="Dot3Lb" Content=":" HorizontalAlignment="Left" Margin="243,194,0,0" VerticalAlignment="Top" Height="32" Width="15"/>
        <Label x:Name="Dot4Lb" Content=":" HorizontalAlignment="Left" Margin="315,194,0,0" VerticalAlignment="Top" Height="32" Width="15"/>
        <Label x:Name="СhangeHourLb" Content="Час" HorizontalAlignment="Left" Margin="193,138,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ChangeMinuteLb" Content="Минута" HorizontalAlignment="Left" Margin="258,138,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ChangeSecondLb" Content="Секунда" HorizontalAlignment="Left" Margin="330,138,0,0" VerticalAlignment="Top"/>
